{
  "name": "kaiserwerk/wp-custom-repository",
  "description": "A custom repository for Wordpress plugins and themes.",
  "authors": [
    {
      "name": "Robin Kaiser",
      "email": "m@r-k.mx"
    }
  ],
  "require": {
    "phpmailer/phpmailer": "6.5.0",
    "catfan/medoo": "^1.5.6",
    "league/climate": "^3.4",
    "symfony/yaml": "^4.2",
